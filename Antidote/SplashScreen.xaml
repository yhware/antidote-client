<Window x:Class="Antidote.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Antidote"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized"
        Topmost="True" Background="{StaticResource PoliceBlueBrush}"
        Title="SplashScreen" Height="300" Width="300">
    <Grid>
        <TextBlock 
            Foreground="White"
            FontSize="40"
            FontWeight="Light"
            Text="로딩중..." 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            />

    </Grid>
</Window>
